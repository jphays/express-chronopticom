@import 'nib'

bgcolor = #222
textcolor = #aaa

// site css

*
    box-sizing: border-box

body
    color: textcolor
    background: bgcolor
    min-height: 100%
    font: 12px/1.3 Consolas, 'lucida console', monaco, monospace

a, a:visited, .linkish
    text-decoration: none
    outline: none
    color: #54a6de
    cursor: pointer

a:hover, .linkish:hover
    text-decoration: underline

h1
    font-size: 16em
    line-height: 1em
    text-align: center

p
    margin-top: 1em

p:first-child
    margin-top: 0

i
    font-style: italic
b
    font-weight: bold

header
    background: darken(bgcolor, 40%)
    height: 50px
    padding: 5px 10px
    border-bottom: 1px solid lighten(bgcolor, 20%)
    box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2)

header a.sitename
    absolute: top 18px left 20px
    font-weight: bold
    letter-spacing: 3px
    color: #aaa
    text-decoration: none
    transition: all 0.8s

header a.sitename:hover
    color: #a6e22e
    text-decoration: underline

div.content
    margin-top: 20px

div.content-block
    background: darken(bgcolor, 40%)
    border: lighten(bgcolor, 20%)
    box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.2)
    padding: 10px
    margin: 20px auto
    text-align: left

div.large
    width: 600px


// header styles

.font1
    font-family: Almendra
    font-style: italic
    font-weight: bold
    letter-spacing: 0.05em

.font2
    font-family: Alegreya SC
    font-style: normal
    font-weight: normal
    letter-spacing: 0

coolblue = #46C

h1
    transition: all 0.8s

.tasteful
    color: coolblue;
    text-shadow: 4px 5px 6px rgba(0, 0, 0, 0.4)
    -webkit-text-stroke: 2.2px #58F
    -webkit-mask-image: linear-gradient(top, rgba(0,0,0,1), rgba(0,0,0,1), rgba(0,0,0,0.35))

.shifted
    text-shadow: 4px 4px 0 coolblue;
    background: linear-gradient(top, #349, rgba(0, 0, 0, 0.5));
    -webkit-text-stroke: 1.5px #CCC;
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    background-clip: text, border;

.echo
    color: bgcolor
    text-shadow: 4px 4px 0 coolblue
    -webkit-text-stroke: 1.5px lighten(bgcolor, 15%)

.pulse
    color: bgcolor
    text-shadow: 0px 0px 10px coolblue
    -webkit-text-stroke: 1.5px coolblue

/* text styles */

.textfont1
    font-size: 1.6em
    font-family: Almendra
    text-shadow: 1px 1px 1px rgba(200, 200, 200, 0.3)

.textfont2
    font-size: 1.6em
    font-family: Alegreya

.textfont3
    font-size: 1.25em
    font-family: ff-nuvo-web-pro